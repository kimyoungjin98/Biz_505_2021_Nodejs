extends layout

block content
	script(src="/js/table.js")
	style.
		section.main {
			display:flex;
			flex-wrap:wrap;

			justify-content:center;
			align-items:center;
		}
		div.table {
			width:200px;
			height:100px;
			border:1px solid lightgray;
			margin:10px;

			text-align:center;
			line-height:100px;

			background-color: white;
			color:white;
			text-shadow:1px 1px 1px black;
			font-weight:bold;
			font-size:20px;

			cursor:pointer;
		}
		div.table:hover {
			transition:0.5s ease;
			background-color:gray;
		}
	- for(let i = 0 ; i < 12 ; i++)
		div.table(data-table_id= i+1 ) !{i + 1} 번 테이블
